<project name="WSEjbWebServiceProviderTest" basedir="." default="usage">

  <property name="app.name" value="WSEjbWebServiceProviderTest"/>
  <property name="client.app.name" value="WSEjbWebServiceProviderTestClnt"/>
  <property name="wsdl.filename" value="HelloService.wsdl"/>

  <import file="../../../../../../../../../src/com/sun/ts/tests/jaxws/common/xml/common.xml"/>

  <property name="wsdl.file" value="${src.dir}/${pkg.dir}/${wsdl.filename}"/>
  <property name="wsdl.location" value="META-INF/wsdl/${wsdl.filename}"/>

  <target name="-precompile">
    <antcall  target="do_wsdl2java_generate_server">
        <param name="customization.binding.files" value="customfile.xml customfile2.xml"/>
    </antcall>
  </target>

  <target name="package" >
      <ts.ejbjar archivename="${app.name}" excludedfiles="${pkg.dir}/HelloService.class, ${pkg.dir}/Client.class">
	<zipfileset dir="${src.dir}/${pkg.dir}" includes="${wsdl.filename}, *.xsd"  prefix="META-INF/wsdl" />
	<zipfileset dir="${class.dir}" includes="
	    ${pkg.dir}/Hello.class,
	    ${pkg.dir}/HelloBean.class,
	    ${pkg.dir}/ObjectFactory.class,
	    ${pkg.dir}/SayHello.class,
	    ${pkg.dir}/SayHelloResponse.class,
	    ${pkg.dir}/package-info.class,
            com/sun/ts/tests/jaxws/common/JAXWS_Util.class,
            com/sun/ts/tests/jaxws/common/JAXWS_Data.class" />
      </ts.ejbjar>
      <ts.ear archivename="${app.name}" includedefaultfiles="false">
         <zipfileset dir="${dist.dir}/${pkg.dir}" includes="${app.name}_ejb.jar"/>
      </ts.ear>

      <ts.clientjar archivename="${client.app.name}" mainclass="com.sun.ts.tests.webservices12.ejb.annotations.WSEjbWebServiceProviderTest.Client" excludedfiles="${pkg.dir}/HelloBean.class">
	<zipfileset dir="${src.dir}/${pkg.dir}" includes="${wsdl.filename}, *.xsd"  prefix="META-INF/wsdl" />
	<zipfileset dir="${class.dir}" includes="
	    ${pkg.dir}/Hello.class,
	    ${pkg.dir}/HelloService.class,
	    ${pkg.dir}/ObjectFactory.class,
	    ${pkg.dir}/SayHello.class,
	    ${pkg.dir}/SayHelloResponse.class,
	    ${pkg.dir}/package-info.class,
            com/sun/ts/tests/jaxws/common/JAXWS_Util.class,
            com/sun/ts/tests/jaxws/common/JAXWS_Data.class" />
      </ts.clientjar>
      <ts.ear archivename="${client.app.name}" includedefaultfiles="false">
         <zipfileset dir="${dist.dir}/${pkg.dir}" includes="${client.app.name}_client.jar"/>
      </ts.ear>
  </target>

</project>
