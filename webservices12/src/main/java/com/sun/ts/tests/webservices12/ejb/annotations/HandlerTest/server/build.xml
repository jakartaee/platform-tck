<project name="webservices12_ejb_annotations_HandlerTest_server" basedir="." default="usage">
  <property name="app.name" value="WSHandlerTestEJB"/>
  <property name="service.names" value="HandlerTestService"/>
  <property name="sei.names" value="Hello"/>
  <property name="wsdl.filename" value="HandlerTestService.wsdl"/>
  <property name="wsdl.defs" value="HandlerTestDefs.xsd"/>


  <!-- Import common classes properties and specific packaging file -->
  <import file="../../../../../../../../../../src/com/sun/ts/tests/jaxws/common/xml/common.xml"/>

  <property name="wsdl.file" value="${src.dir}/${pkg.dir}/${wsdl.filename}"/>

  <property name="impl.classes" value="${pkg.dir}/HelloBean.class"/>
  <property name="common.classes" value="${jaxws.common.classes}"/>

  <target name="-precompile">
    <antcall target="do_wsdl2java_generate_server">
       <param name="customization.binding.files" value="customfile.xml customfile2.xml"/>
    </antcall>
  </target>
  <target name="package">
      <ts.ejbjar archivename="${app.name}" excludedfiles="${pkg.dir}/HandlerTestService.class">
        <zipfileset dir="${src.dir}/${pkg.dir}" includes="${wsdl.filename}, ${wsdl.defs}"  prefix="META-INF/wsdl" />
        <zipfileset dir="${class.dir}" includes="
            ${pkg.dir}/*handler.xml,
            ${pkg.dir}/*.class,
            com/sun/ts/tests/jaxws/common/Handler_Util.class,
            com/sun/ts/tests/jaxws/common/Constants.class,
            com/sun/ts/tests/jaxws/common/JAXWS_Util.class,
            com/sun/ts/tests/jaxws/common/JAXWS_Data.class" />
      </ts.ejbjar>
      <ts.ear archivename="${app.name}">
         <zipfileset dir="${dist.dir}/${pkg.dir}" includes="${app.name}_ejb.jar"/>
      </ts.ear>
  </target>
  <target name="-preclean" />

</project>
