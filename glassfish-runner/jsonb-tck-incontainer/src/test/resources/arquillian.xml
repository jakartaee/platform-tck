<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <!-- Uncomment to have test archives exported to the file system for inspection -->
    
<!--    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>-->
    

    <container qualifier="glassfish">
        <configuration>
            <property name="allowConnectingToRunningServer">false</property>
            <property name="adminHost">localhost</property>
            <property name="adminHttps">false</property>
            <property name="authorisation">false</property>
            <property name="adminPort">4848</property>
            <property name="outputToConsole">true</property>
            <property name="glassFishHome">${glassfish.home}</property>
            <property name="suspend">${glassfish.debug}</property>
        </configuration>
    </container>

</arquillian>
