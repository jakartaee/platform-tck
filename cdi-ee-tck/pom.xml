        <!-- Wave4 -->
        <jaxrs.api.version>3.1.0</jaxrs.api.version>
        <jta.api.version>2.0.1</jta.api.version>

        <!-- Wave5 -->
        <ejb.api.version>4.0.1</ejb.api.version>
        <jca.api.version>2.1.0</jca.api.version>

        <!-- Wave6 -->
        <jsf.api.version>4.1.0-M2</jsf.api.version>
