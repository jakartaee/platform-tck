<project name="jaxws_ee_w2j_document_literal_mtomfeature" basedir="." default="usage">
  <property name="app.name" value="WSW2JDLMTOMFeature"/>
  <property name="service.names" value="MTOMFeatureTestService"/>
  <property name="wsdl.filename" value="MTOMFeatureTestService.wsdl"/>
  <property name="sei.names" value="MTOMFeatureTest1, MTOMFeatureTest2"/>

  <!-- Import common classes properties and specific packaging file -->
  <import file="../../../../../../../../../../../src/com/sun/ts/tests/jaxws/common/xml/common.xml"/>

  <property name="wsdl.file" value="${src.dir}/${pkg.dir}/${wsdl.filename}"/>

  <property name="client.class" value="com.sun.ts.tests.jaxws.ee.w2j.document.literal.mtomfeature.Client"/>
  <property name="impl.classes" value="
${pkg.dir}/*Impl*.class,
${pkg.dir}/Server*.class"/>
  <property name="common.classes" value="${jaxws.common.classes}"/>


  <target name="generate_server">
        <antcall  target="do_wsdl2java_generate_server">
          <param name="customization.binding.files" value="custom-server.xml"/>
        </antcall>
        <ts.javac includes="${pkg.dir}/*.java" excludes="${pkg.dir}/Client*.java"/>
        <antcall target="webservice_import_package_with_content"/>
     </target>

    <target name="generate_client" depends="generate_server">
       <ts.clean.classes/>
       <antcall  target="do_wsdl2java_generate_client">
         <param name="customization.binding.files" value="custom-client.xml"/>
       </antcall>
       <ts.javac includes="${pkg.dir}/*.java" excludes="${pkg.dir}/*Impl*.java, ${pkg.dir}/Server*.java"/>
       <antcall target="client_import_package"/>
    </target>

     <target name="build" depends="generate_client"/>
</project>
