<project name="jaxws_wsa_j2w_document_literal_action" basedir="." default="usage">
  <property name="app.name" value="WSAJ2WDLActionTest"/>
  <property name="service.names" value="AddNumbersService"/>
  <property name="sei.names" value="AddNumbers"/>
  <property name="port.name" value="AddNumbersPort"/>
  <property name="wsdl.filename" value="AddNumbersService.wsdl"/>
  <property name="impl.class" value="com.sun.ts.tests.jaxws.wsa.j2w.document.literal.action.AddNumbersImpl"/>

  <!-- Import common classes properties and specific packaging file -->
  <import file="../../../../../../../../../../../src/com/sun/ts/tests/jaxws/common/xml/common.xml"/>

  <property name="client.class" value="com.sun.ts.tests.jaxws.wsa.j2w.document.literal.action.Client"/>
  <property name="wsdl.file" value="${src.dir}/${pkg.dir}/${wsdl.filename}"/>

  <property name="impl.classes" value="${pkg.dir}/server/*.class"/>
  <property name="other.classes" value="${wsa.common.classes}"/>
  <property name="common.classes" value="${common.classes.all}"/>


  <target name="generate_server" >
    <ts.javac includes="${pkg.dir}/*.java" excludes="${pkg.dir}/*Client*.java"/>
    <antcall  target="do_java2wsdl_generate_server"/>
    <antcall  target="j2w_webservice_import_package"/>
  </target>

  <target name="generate_client" depends="generate_server">
       <ts.clean.classes/>
       <antcall  target="do_wsdl2java_generate_client_with_package_option">
         <param name="customization.binding.files" value="customfile.xml"/>
       </antcall>
       <ts.javac includes="${pkg.dir}/*Client*.java, ${pkg.dir}/*Constants.java"/>
       <antcall target="client_import_package"/>
    </target>

     <target name="build" depends="generate_client"/>

  <target name="-preclean">
    <remove_wsdl_xsd/>
  </target>

</project>
