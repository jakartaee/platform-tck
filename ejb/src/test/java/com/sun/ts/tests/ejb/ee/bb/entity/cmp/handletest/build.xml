	<property name="ejb_ee_bb_common_dir" value="com/sun/ts/tests/ejb/ee/bb/common" />

	<target name="-precompile" >
		<ts.javac includes="${ejb_ee_bb_common_dir}/*.java" />
	</target>

	<target name="package">

		<ts.ejbjar descriptor="ejb_bbECmp_handle_ejb.xml" archivename="ejb_bbECmp_handle" />

		<ts.clientjar descriptor="ejb_bbECmp_handle_client.xml"
                    archivename="ejb_bbECmp_handle"
                    mainclass="com.sun.ts.tests.ejb.ee.bb.entity.cmp.handletest.Client"
                    excludedfiles="com/sun/ts/tests/ejb/ee/bb/entity/cmp/handletest/TestBeanEJB.class">

			<fileset dir="${class.dir}" includes="${ejb_ee_bb_common_dir}/EJBHandleObjectInputStream.class"/>
		</ts.clientjar>

		<ts.ear archivename="ejb_bbECmp_handle"/>

	</target>

</project>
