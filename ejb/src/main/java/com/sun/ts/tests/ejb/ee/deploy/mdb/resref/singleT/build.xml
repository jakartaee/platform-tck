<project name="ejb_ee_deploy_mdb_resref_singleT" basedir="." default="usage">
<import file="../../../../../../../../../../../bin/xml/ts.import.xml"/> 

  <target name="compile">
      <ts.javac includes="${pkg.dir}/**/*.java,
                          com/sun/ts/tests/jms/common*/**/*.java"/>
  </target>

  <target name="package">

      <ts.ejbjar descriptor="ejb_depMdbT_resref_single_ejb.xml"
                 archivename="ejb_depMdbT_resref_single">
        <fileset dir="${class.dir}" 
                 includes="${ts.wrappers.classes.mdb.ejb},
                           com/sun/ts/tests/assembly/util/shared/resref/single/ByteArrayDataSource.class,
                           com/sun/ts/tests/assembly/util/shared/resref/single/TestCode.class"/>
      </ts.ejbjar>

      <ts.war descriptor="ejb_depMdbT_resref_single_jsp.xml"
              archivename="ejb_depMdbT_resref_single_jsp"
              excludedfiles="com/sun/ts/tests/ejb/ee/deploy/mdb/resref/singleT/MsgBean.class">
        <fileset dir="contentRoot"/>
      </ts.war>

      <ts.clientjar descriptor="ejb_depMdbT_resref_single_client.xml"
                    archivename="ejb_depMdbT_resref_single"
                    mainclass="com.sun.ts.tests.ejb.ee.deploy.mdb.resref.singleT.Client"
                    excludedfiles="com/sun/ts/tests/ejb/ee/deploy/mdb/resref/singleT/MsgBean.class">
        <fileset dir="${class.dir}" includes="${ts.wrappers.classes.mdb.client}"/>
      </ts.clientjar>

      <ts.ear archivename="ejb_depMdbT_resref_single"/>

  </target>

</project>
