<project name="ejb_ee_ws_allowedmethodstest_bm" basedir="." default="usage">
<import file="../../../../../../../../../../bin/xml/ts.import.xml"/> 

  <property name="app.name" value="ejb_ws_allowedmethodstest_bm"/>
  <property name="client.app.name" value="ejb_ws_allowedmethodstest_bmClnt"/>

  <target name="-precompile">
      <ts.javac includes="com/sun/ts/tests/ejb/ee/bb/session/util/*.java"/>
  </target>

  <target name="package">

      <ts.ejbjar descriptor="${app.name}_ejb.xml" archivename="${app.name}">
        <fileset dir="${class.dir}"
                 includes="com/sun/ts/tests/ejb/ee/bb/session/util/DBSupport.class"/>
        <zipfileset dir="." includes="webservices.xml" prefix="META-INF"/>
        <zipfileset dir="." includes="TestService.wsdl" prefix="META-INF/wsdl"/>
        <fileset dir="." includes="TestServiceMapping.xml"/>
      </ts.ejbjar>

      <ts.ear archivename="${app.name}" 
              excludedfiles="${client.app.name}_client.jar"/>

      <ts.clientjar descriptor="${client.app.name}_client.xml" 
                    archivename="${client.app.name}" 
                    mainclass="com.sun.ts.tests.ejb.ee.webservices.allowedmethodstest.bm.Client"
                    excludedfiles="com/sun/ts/tests/ejb/ee/webservices/allowedmethodstest/bm/TestBeanEJB.class,
                                   com/sun/ts/tests/ejb/ee/webservices/allowedmethodstest/bm/TestBeanLocal*.class">
        <zipfileset dir="." includes="TestService.wsdl" prefix="META-INF/wsdl"/>
        <fileset dir="." includes="TestServiceMapping.xml"/> 
      </ts.clientjar>

      <ts.ear archivename="${client.app.name}"
              excludedfiles="${app.name}_ejb.jar"/>

  </target>

</project>
