<ejb-jar version="4.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/ejb-jar_4_0.xsd">
  <display-name>Ejb1</display-name>
  <enterprise-beans>
    <session>
      <ejb-name>TestBean</ejb-name>
      <home>com.sun.ts.tests.ejb.ee.webservices.allowedmethodstest.bm.TestBeanHome</home>
      <remote>com.sun.ts.tests.ejb.ee.webservices.allowedmethodstest.bm.TestBean</remote>
      <local-home>com.sun.ts.tests.ejb.ee.webservices.allowedmethodstest.bm.TestBeanLocalHome</local-home>
      <local>com.sun.ts.tests.ejb.ee.webservices.allowedmethodstest.bm.TestBeanLocal</local>
      <service-endpoint>com.sun.ts.tests.ejb.ee.webservices.allowedmethodstest.bm.Test</service-endpoint>
      <ejb-class>com.sun.ts.tests.ejb.ee.webservices.allowedmethodstest.bm.TestBeanEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Bean</transaction-type>
      <security-role-ref>
        <role-name>Administrator</role-name>
        <role-link>Administrator</role-link>
      </security-role-ref>
      <security-identity>
	<use-caller-identity/>
      </security-identity>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <security-role>
      <role-name>Administrator</role-name>
    </security-role>
    <method-permission>
    <role-name>Administrator</role-name>
      <method>
        <ejb-name>TestBean</ejb-name>
	<method-intf>ServiceEndpoint</method-intf>
        <method-name>getCallerPrincipalTest</method-name>
        <method-params>
          <method-param>java.lang.String</method-param>
        </method-params>
      </method>
      <method>
        <ejb-name>TestBean</ejb-name>
  	<method-intf>ServiceEndpoint</method-intf>
      	<method-name>businessMethod</method-name>
    </method>
    </method-permission>
  </assembly-descriptor>
</ejb-jar>
