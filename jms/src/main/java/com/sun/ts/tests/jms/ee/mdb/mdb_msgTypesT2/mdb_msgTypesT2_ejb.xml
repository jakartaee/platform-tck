    </container-transaction>
   <container-transaction>    
   <method>
    <ejb-name>MDB_T_TestEJB</ejb-name>
    <method-intf>Remote</method-intf>
    <method-name>isThereSomethingInTheQueue</method-name>
    </method>
    <trans-attribute>Required</trans-attribute>
    </container-transaction>
