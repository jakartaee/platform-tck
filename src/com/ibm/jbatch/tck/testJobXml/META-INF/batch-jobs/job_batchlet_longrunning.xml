<job id="job_batchlet_longrunning" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
	<step id="step1" next="step2">
		<batchlet ref="myLongRunningBatchlet">
			<properties>
			    <!-- Run indefinitely so we know for sure we can stop in the middle of step 1. -->
				<property name="run.indefinitely" value="#{jobParameters['run.indefinitely']}"/>
				<!-- Tests fail then restart -->
				<property name="throw.exc.on.number.3" value="#{jobParameters['throw.exc.on.number.3']}"/>
			</properties>
		</batchlet>
	</step>
	<step id="step2" >
		<batchlet ref="myLongRunningBatchlet"/>					
	</step>
</job>
