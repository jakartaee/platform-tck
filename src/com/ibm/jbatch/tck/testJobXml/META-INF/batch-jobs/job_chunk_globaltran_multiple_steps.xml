<job id="job_chunk_globaltran" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
	<properties>
		<!--  This is irrelevant.  Only the step-level property matters. -->
		<property name="javax.transaction.global.timeout" value="1" />
	</properties>
	<step id="init_tables_step1" next="step2" allow-start-if-complete="false">
		<properties>
			<property name="javax.transaction.global.timeout" value="180" />
		</properties>
		<chunk item-count="1">
			<reader ref="inventoryInitReader" />
			<processor ref="inventoryInitProcessor">
				<properties>
					<property name="init.inventory.quantity"
						value="#{jobParameters['init.inventory.quantity']}" />
				</properties>
			</processor>
			<writer ref="inventoryInitWriter" />
		</chunk>
	</step>
	<step id="step2" next="init_tables_step2">
	    <!--  Proves '0' means indefinite timeout (or at least that it's a long timeout). -->
		<properties>
			<property name="javax.transaction.global.timeout" value="0" />
		</properties>
		<listeners>
			<listener ref="inventoryStepListener" />
		</listeners>
		<chunk item-count="#{jobParameters['commit.interval']}">
			<reader ref="inventoryReader" />
			<processor ref="inventoryProcessor" />
			<writer ref="inventoryWriter">
				<properties>
					<!-- 0 means don't force an exception -->
					<property name="forced.fail.count" value="#{jobParameters['forced.fail.count']}" />
					<property name="dummy.delay.seconds" value="#{jobParameters['dummy.delay.seconds']}" />
				</properties>
			</writer>
		</chunk>
	</step>
	<step id="init_tables_step2" next="step3" allow-start-if-complete="false">
		<properties>
			<property name="javax.transaction.global.timeout" value="180" />
		</properties>
		<chunk item-count="1">
			<reader ref="inventoryInitReader" />
			<processor ref="inventoryInitProcessor">
				<properties>
					<property name="init.inventory.quantity"
						value="99" />
				</properties>
			</processor>
			<writer ref="inventoryInitWriter" />
		</chunk>
	</step>
	<step id="step3">
	    <!--  Proves that no timeout property means timeout of 180 sec. (or at least that it's a long timeout). -->
		<listeners>
			<listener ref="inventoryStepListener" />
		</listeners>
		<chunk item-count="#{jobParameters['commit.interval']}">
			<reader ref="inventoryReader" />
			<processor ref="inventoryProcessor" />
			<writer ref="inventoryWriter">
				<properties>
					<!-- 0 means don't force an exception -->
					<property name="forced.fail.count" value="15" />
					<property name="dummy.delay.seconds" value="#{jobParameters['dummy.delay.seconds']}" />
				</properties>
			</writer>
		</chunk>
	</step>
</job>