<project name="build_jpa_alternate_provider" default="build" >

    <!-- IMPORTS -->
    <import file="../../../../../../../../../bin/xml/ts.import.xml" />

    <target name="-precompile">
         <ant dir="${src.dir}/${pkg.dir}/../util">
             <target name="clean"/>
             <target name="build"/>
         </ant>
    </target>
    <target name="package">
        <delete failonerror="false" file="${dist.dir}/${pkg.dir}/jpa_alternate_provider.jar"/>
        <!-- create the jpa_alternate_provider.jar -->
        <jar destfile="${dist.dir}/${pkg.dir}/jpa_alternate_provider.jar">
            <fileset dir="${class.dir}" includes="${pkg.dir}/implementation/*.class"/>
            <fileset dir="${src.dir}" includes="${pkg.dir}/implementation/*.java"/>
            <zipfileset dir="${src.dir}/${pkg.dir}/METAINF" includes="services/jakarta.persistence.spi.PersistenceProvider" prefix="META-INF"/>
        </jar>
    </target>
</project>

