<project name="jsonb_defaultmapping_polymorphictypes" basedir="." default="usage">
  <import file="../../../../../../../../bin/xml/ts.import.xml" />
  <property name="app.name" value="jsonb_defaultmapping_polymorphictypes"/>
  <property name="client.class" value="com.sun.ts.tests.jsonb.defaultmapping.polymorphictypes.PolymorphicMappingTest"/>
  <property name="other.classes"
            value="com/sun/ts/tests/jsonb/common/*.class, 
  	               com/sun/ts/tests/jsonb/*.class,
  	               ${src.dir}/model/*.class"/>

  <target name="package">
      <ts.vehicles name="${app.name}">
        <ejb-elements>
          <fileset dir="${class.dir}" includes="${other.classes}"/>
        </ejb-elements>
        <client-elements>
          <fileset dir="${class.dir}" includes="${other.classes}"/>
        </client-elements>
        <servlet-elements>
          <zipfileset dir="${class.dir}" includes="${other.classes}"
                      prefix="WEB-INF/classes"/>
        </servlet-elements>
        <jsp-elements>
          <zipfileset dir="${class.dir}" includes="${other.classes}"
                      prefix="WEB-INF/classes"/>
        </jsp-elements>
      </ts.vehicles>
  </target>	
</project>
