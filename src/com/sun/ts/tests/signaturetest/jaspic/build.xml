<project name="signaturetest_jaspic" basedir="." default="usage">

    <import file="../build.xml"/> 
  
    <target name="compile">
        <antcall target="signaturetest.compile"/>
        <ts.javac/>
    </target>

    <target name="clean">
        <antcall target="signaturetest.clean"/>
        <ts.clean/>
    </target>
    
    <target name="package">
        <ts.vehicles name="JaspicSigTest"
                     manifest="manifest.mf"
                     classes="${pkg.dir}/JaspicSigTest.class,
                              ${fw.pkg.dir}/SigTestData.class,
                              ${fw.pkg.dir}/SigTestDriver.class,
                              ${fw.pkg.dir}/ApiCheckDriver.class,
                              ${fw.pkg.dir}/SigTestResult.class,
                              ${fw.pkg.dir}/PackageList.class,
                              ${fw.pkg.dir}/SigTest.class,
                              ${fw.pkg.dir}/SigTestEE.class,
                              ${fw.pkg.dir}/SignatureTestDriverFactory.class,
                              ${fw.pkg.dir}/SignatureTestDriver*.class"/>                          
        <antcall target="add.sigtest"/>
    </target>

    <target name="add.sigtest">
        <jar
            destfile="${ts.home}/dist/${pkg.dir}/JaspicSigTest_appclient_vehicle.ear"
            update="true" basedir="${ts.home}/lib" includes="sigtest.jar"/>
        <jar destfile="${ts.home}/dist/${pkg.dir}/JaspicSigTest_ejb_vehicle.ear"
             update="true" basedir="${ts.home}/lib" includes="sigtest.jar"/>
        <jar
            destfile="${ts.home}/dist/${pkg.dir}/JaspicSigTest_servlet_vehicle.ear"
            update="true" basedir="${ts.home}/lib" includes="sigtest.jar"/>
        <jar destfile="${ts.home}/dist/${pkg.dir}/JaspicSigTest_jsp_vehicle.ear"
             update="true" basedir="${ts.home}/lib" includes="sigtest.jar"/>
    </target>

</project>
