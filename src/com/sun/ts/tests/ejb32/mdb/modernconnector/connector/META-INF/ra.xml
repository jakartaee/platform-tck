<connector xmlns="http://java.sun.com/xml/ns/j2ee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
           http://java.sun.com/xml/ns/j2ee/connector_1_5.xsd"
           version="1.5">

    <description>Event Monitor Resource Adapter</description>
    <display-name>Event Monitor Resource Adapter</display-name>

    <vendor-name>CTS</vendor-name>

    <eis-type>Event Producer</eis-type>

    <resourceadapter-version>1.0</resourceadapter-version>

    <resourceadapter id="CommandResourceAdapter">

        <resourceadapter-class>com.sun.ts.tests.ejb32.mdb.modernconnector.connector.EventMonitorAdapter
        </resourceadapter-class>

        <inbound-resourceadapter>
            <messageadapter>
                <messagelistener>
                    <messagelistener-type>com.sun.ts.tests.ejb32.mdb.modernconnector.connector.NoUseListener
                    </messagelistener-type>
                    <activationspec>
                        <activationspec-class>com.sun.ts.tests.ejb32.mdb.modernconnector.connector.EventMonitorConfig
                        </activationspec-class>
                    </activationspec>
                </messagelistener>
            </messageadapter>
        </inbound-resourceadapter>

    </resourceadapter>
</connector>
