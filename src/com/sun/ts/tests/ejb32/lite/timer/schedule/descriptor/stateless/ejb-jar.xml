<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.1"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">
    <!-- timer info is the same as the info used in Client to find timer -->
    <enterprise-beans>
        <session>
            <ejb-name>NoParamTimeoutBean</ejb-name>
            <timeout-method>
                <method-name>timeout</method-name>
            </timeout-method>
            <timer>
                <schedule>
                    <minute>*</minute>
                    <hour>*</hour>
                </schedule>
                <timeout-method>
                    <method-name>auto</method-name>
                </timeout-method>
                <persistent>false</persistent>
                <info>NoParamTimeoutBean.auto</info>
            </timer>
        </session>
        <session>
            <ejb-name>WithParamTimeoutBean</ejb-name>
            <timeout-method>
                <method-name>timeout</method-name>
                <method-params>
                    <method-param>javax.ejb.Timer</method-param>
                </method-params>
            </timeout-method>
            <timer>
                <schedule>
                    <minute>*</minute>
                    <hour>*</hour>
                </schedule>
                <timeout-method>
                    <method-name>auto</method-name>
                    <method-params>
                        <method-param>javax.ejb.Timer</method-param>
                    </method-params>
                </timeout-method>
                <persistent>false</persistent>
                <info>WithParamTimeoutBean.auto</info>
            </timer>
        </session>
        <session>
            <ejb-name>EmptyParamTimeoutBean</ejb-name>
            <timeout-method>
                <method-name>timeout</method-name>
                <method-params/>
            </timeout-method>
            <timer>
                <description/>
                <schedule>
                    <minute>*</minute>
                    <hour>*</hour>
                </schedule>
                <timeout-method>
                    <method-name>auto</method-name>
                    <method-params/>
                </timeout-method>
                <persistent>false</persistent>
                <info>EmptyParamTimeoutBean.auto</info>
            </timer>
        </session>
    </enterprise-beans>
</ejb-jar>
