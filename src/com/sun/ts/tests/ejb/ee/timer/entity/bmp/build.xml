<project name="ejb_ee_timerEbmp_" basedir="." default="usage">
<import file="../../../../../../../../../../bin/xml/ts.import.xml"/> 

  <target name="compile">
     <ts.javac includes="${pkg.dir}/**/*.java,
                         com/sun/ts/tests/ejb/ee/timer/helper/*.java,
                         com/sun/ts/tests/common/ejb/wrappers/*.java"/>
  </target>

  <target name="package">

      <ts.clientjar descriptor="ejb_timerEbmp_client.xml"
                    archivename="ejb_timerEbmp" 
                    mainclass="com.sun.ts.tests.ejb.ee.timer.entity.bmp.Client"
                    excludedfiles="com/sun/ts/tests/ejb/ee/timer/entity/bmp/DAOBean.class,
                                   com/sun/ts/tests/ejb/ee/timer/entity/bmp/*EJB.class,
                                   com/sun/ts/tests/ejb/ee/timer/entity/bmp/TestBeanLocal*.class">
         <fileset dir="${class.dir}"
                  includes="com/sun/ts/tests/ejb/ee/timer/common/*.class,
                            com/sun/ts/tests/ejb/ee/timer/helper/CheckedMethod.class,
                            com/sun/ts/tests/ejb/ee/timer/helper/CheckedMethodHome.class"/>
      </ts.clientjar>

      <ts.ejbjar descriptor="ejb_timerEbmp_ejb.xml" archivename="ejb_timerEbmp">
         <fileset dir="${class.dir}"
                  includes="com/sun/ts/tests/ejb/ee/timer/helper/*.class,
                            com/sun/ts/tests/ejb/ee/timer/common/*.class,
                            com/sun/ts/tests/common/ejb/wrappers/CMP20Wrapper.class,
                            com/sun/ts/tests/common/ejb/wrappers/State*Wrapper.class"/>
     </ts.ejbjar>

     <ts.ear archivename="ejb_timerEbmp"/>

  </target>

</project>
