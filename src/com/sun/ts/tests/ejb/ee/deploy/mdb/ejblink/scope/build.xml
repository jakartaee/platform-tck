<project name="ejb_ee_deploy_mdb_ejblink_scope" basedir="." default="usage">
<import file="../../../../../../../../../../../bin/xml/ts.import.xml"/> 

  <target name="compile">
      <ts.javac includes="${pkg.dir}/**/*.java,
                          com/sun/ts/tests/jms/common*/**/*.java"/>
  </target>

  <target name="package">

      <ts.ejbjar descriptor="ejb_depMdbQ_ejblink_scope_jar2_ejb.xml"
                 archivename="ejb_depMdbQ_ejblink_scope_jar2"
                 excludedfiles="com/sun/ts/tests/ejb/ee/deploy/mdb/ejblink/scope/MsgBean.class,
                                com/sun/ts/tests/ejb/ee/deploy/mdb/ejblink/scope/ReferencedBean.class,
                                com/sun/ts/tests/ejb/ee/deploy/mdb/ejblink/scope/ReferencedBeanEJB.class,
                                com/sun/ts/tests/ejb/ee/deploy/mdb/ejblink/scope/ReferencedBeanHome.class">
        <fileset dir="${class.dir}"
                 includes="${ts.wrappers.classes.stateless.ejb},
                           com/sun/ts/tests/assembly/util/shared/ejbref/common/ReferencedBeanCode.class"/>
      </ts.ejbjar>

      <ts.ejbjar descriptor="ejb_depMdbQ_ejblink_scope_jar1_ejb.xml"
                 archivename="ejb_depMdbQ_ejblink_scope_jar1"     
                 excludedfiles="com/sun/ts/tests/ejb/ee/deploy/mdb/ejblink/scope/ReferencedBean2EJB.class">
        <fileset dir="${class.dir}"
                 includes="${ts.wrappers.classes.stateless.ejb},
                           ${ts.wrappers.classes.mdb.ejb},
                           com/sun/ts/tests/assembly/util/shared/ejbref/common/ReferencedBeanCode.class"/>
      </ts.ejbjar>

      <ts.clientjar descriptor="ejb_depMdbQ_ejblink_scope_client.xml"
                    archivename="ejb_depMdbQ_ejblink_scope"
                    mainclass="com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scope.Client"
                    excludedfiles="com/sun/ts/tests/ejb/ee/deploy/mdb/ejblink/scope/MsgBean.class,
                                   com/sun/ts/tests/ejb/ee/deploy/mdb/ejblink/scope/ReferencedBean*.class">
        <fileset dir="${class.dir}" includes="${ts.wrappers.classes.mdb.client}"/>
      </ts.clientjar>

      <ts.ear archivename="ejb_depMdbQ_ejblink_scope"/>

  </target>

</project>
