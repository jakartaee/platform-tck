<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <display-name>Ejb1</display-name>
  <enterprise-beans>
    <message-driven>
      <ejb-name>TestBean</ejb-name>
      <ejb-class>com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scopeT.MsgBean</ejb-class>
      <messaging-type>javax.jms.MessageListener</messaging-type>
      <transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Topic</message-destination-type>
      <ejb-ref>
        <ejb-ref-name>ejb/Bean_OtherJAR</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scopeT.ReferencedBean2Home</home>
        <remote>com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scopeT.ReferencedBean2</remote>
        <ejb-link>ejb_depMdbT_ejblink_scope_jar2_ejb.jar#Director</ejb-link>
      </ejb-ref>
      <ejb-ref>
        <ejb-ref-name>ejb/Bean_SameJAR</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scopeT.ReferencedBeanHome</home>
        <remote>com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scopeT.ReferencedBean</remote>
        <ejb-link>ejb_depMdbT_ejblink_scope_jar1_ejb.jar#Director</ejb-link>
      </ejb-ref>
      <resource-ref>
        <description>description</description>
        <res-ref-name>jms/myQueueConnectionFactory</res-ref-name>
        <res-type>javax.jms.QueueConnectionFactory</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
      </resource-ref>
      <resource-env-ref>
        <resource-env-ref-name>jms/replyQueue</resource-env-ref-name>
        <resource-env-ref-type>javax.jms.Queue</resource-env-ref-type>
      </resource-env-ref>
    </message-driven>
    <session>
      <ejb-name>Director</ejb-name>
      <home>com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scopeT.ReferencedBeanHome</home>
      <remote>com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scopeT.ReferencedBean</remote>
      <ejb-class>com.sun.ts.tests.ejb.ee.deploy.mdb.ejblink.scopeT.ReferencedBeanEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Bean</transaction-type>
      <env-entry>
        <env-entry-name>myName</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>Scorsese</env-entry-value>
      </env-entry>
      <security-identity>
        <use-caller-identity/>
      </security-identity>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>TestBean</ejb-name>
        <method-name>onMessage</method-name>
        <method-params>
          <method-param>javax.jms.Message</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
