      </env-entry>
      <ejb-ref>
        <ejb-ref-name>ejb/Helper</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.sun.ts.tests.ejb.ee.bb.session.stateless.bm.allowedmethodstest.HelperHome</home>
