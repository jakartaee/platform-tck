                           com/sun/ts/tests/common/ejb/wrappers/CMP20Wrapper.class,
                           com/sun/ts/tests/common/testlogic/ejb/bb/argsemantics/TestLogic.class,
                           com/sun/ts/tests/common/ejb/calleebeans/CMP20Callee*.class,
                           com/sun/ts/tests/common/ejb/calleebeans/StatefulCallee*.class"/>
      </ts.ejbjar>

      <ts.clientjar descriptor="ejb_bb_cmp20_argsemantics_client.xml"
                    archivename="ejb_bb_cmp20_argsemantics"
                    mainclass="com.sun.ts.tests.ejb.ee.bb.entity.cmp20.argsemantics.Client"
                    excludedfiles="com/sun/ts/tests/ejb/ee/bb/entity/cmp20/argsemantics/CallerBeanEJB.class"/>

      <ts.ear archivename="ejb_bb_cmp20_argsemantics"/>

  </target>

