<import file="../../../../../../../../../../../bin/xml/ts.import.xml"/> 

  <target name="compile">
    <ts.javac includes="${pkg.dir}/**/*.java,
                        com/sun/ts/tests/common/ejb/**/*.java"/> 
  </target>

  <target name="package">

      <ts.ejbjar descriptor="ejb_bb_cmp20_argsemantics_ejb.xml" archivename="ejb_bb_cmp20_argsemantics">
