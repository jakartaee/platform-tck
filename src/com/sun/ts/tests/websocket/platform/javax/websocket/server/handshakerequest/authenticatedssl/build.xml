<project basedir="." default="usage" name="wsc_platform_javax_websocket_handshakeresponse_ssl">
	<property name="app.name" value="wsc_platform_javax_websocket_handshakeresponse_ssl" />
	<property name="web.war.classes" value="
    	com/sun/ts/tests/websocket/common/util/IOUtil.class,
    		" />
    <property name="client.jar.classes"
              value="com/sun/ts/tests/websocket/platform/javax/websocket/server/handshakerequest/authenticated/ssl/WSCClient.class,
    	      com/sun/ts/tests/websocket/common/impl/ClientConfigurator.class,
    	      com/sun/ts/tests/websocket/common/util/StringUtil.class,
              com/sun/ts/tests/websocket/common/client/WebSocketCommonClient"/>
    <import file="../../../../../../common/common.xml" />
	
    <target name="package">
        <ant antfile="${ts.home}/src/com/sun/ts/tests/websocket/common/common.xml" target="package"/>
        <antcall target="copy.sun-web.xml"/>
    </target> 
	
    <target name="copy.sun-web.xml"> 
        <copy failonerror="true" 
        file="${app.name}_web.war.sun-web.xml" 
        tofile="${ts.home}/dist/${pkg.dir}/${app.name}_web.war.sun-web.xml"/>
    </target> 	

</project>
