<project name="jsf_render_cbutton" basedir="." default="usage">
    
    <!-- IMPORTS -->
    <import file="../common/render.common.xml"/>
    
    <property name="app.name" value="jsf_render_cbutton"/>
    
    <target name="package">
        <ts.war archivename="${app.name}" descriptor="${app.name}_web.xml">  
            <zipfileset dir="${class.dir}"
                        includes="${pkg.dir}/CommandButtonUIBean.class"
                        prefix="WEB-INF/classes"/>
            <zipfileset dir="${render.common.dir}"
                        includes="pnglogo.png"
                        prefix="resources/images"/>
            <zipfileset dir="${render.common.class}"
                        includes="SimpleActionListener.class,
            					  AttributeBean.class"
                        prefix="${common.class.prefix}"/>
            <zipfileset dir="${src.dir}/${pkg.dir}"
                        includes="faces-config.xml"
                        prefix="WEB-INF"/>
            <zipfileset dir="${ts.home}/weblib"
                        includes="*.jar"
                        prefix="WEB-INF/lib"/>
            <fileset dir="${jsp.dir}/commandbutton" includes="*.jsp, *.xhtml"/>
        </ts.war>       
    </target>
    
</project>
