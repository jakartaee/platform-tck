<project name="jsf_flows_basicmultipage" basedir="." default="usage">
    
    <!-- IMPORTS -->
    <import file="../common/flows_common.xml"/>
    
    <property name="app.name" value="jsf_flows_basicmultipage"/> 
    
    <target name="package">
        <ts.war archivename="${app.name}" descriptor="${app.name}_web.xml">       
            <zipfileset dir="${flows.common.dir}"
                        includes="faces-config.xml, beans.xml"
                        prefix="WEB-INF"/>
            <zipfileset dir="${ts.home}/weblib"
                        includes="*.jar"
                        prefix="WEB-INF/lib"/>
            <zipfileset dir="${webpage.dir}/basicmultipage"
                     	includes="*.xhtml"/>
        	<zipfileset dir="${webpage.dir}/basicmultipage/boundtaskflow"
        	            includes="*.xhtml, *xml"
        				prefix="bounded-task-flow"/>
        </ts.war>       
    </target>
    
</project>
