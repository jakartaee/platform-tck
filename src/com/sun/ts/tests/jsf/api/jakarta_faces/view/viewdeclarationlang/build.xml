<project name="jsf_view_vdl" basedir="." default="usage" >

    <!-- IMPORTS -->
    <import file="../common/view.common.xml"/>
    
    <property name="app.name"  value="jsf_view_vdl" />

     <target name="package">
         <ts.war archivename="jsf_view_vdl"
                 descriptor="jsf_view_vdl_web.xml">
             <zipfileset dir="${class.dir}"
                         includes="${jsf.common}/servlets/HttpTCKServlet.class,
                                  ${jsf.common}/util/JSFTestUtil.class"
                         prefix="WEB-INF/classes"/>
            <zipfileset dir="../common/components"
                         includes="myComp.xhtml"
            	         prefix="resources/tckcomp"/>
            <zipfileset dir="../common" includes="myRoot.xhtml" /> 
            <zipfileset dir="${ts.home}/weblib" includes="*.jar"
                         prefix="WEB-INF/lib"/>
         </ts.war>
	</target>

</project>
