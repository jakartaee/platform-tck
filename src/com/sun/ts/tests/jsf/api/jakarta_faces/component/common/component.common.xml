<project name="component_common" basedir=".">
    
    <!-- IMPORTS -->
    <import file="../../../../common/common.xml"/>
    
    <property name="parent.dir" 
              value="com/sun/ts/tests/jsf/api/jakarta_faces/component"/>
    
    <property name="comp.common.dir" value="${parent.dir}/common"/> 
    
    <!-- Override top level compile target, to build utility classes -->
    <target name="compile" 
            description="jsf/api/jakarta_faces/component test specific.">
        <ts.javac includes="${pkg.dir}/**/*.java,
                  ${tests.pkg.dir}/common/webclient/**/*.java,
                  ${jsf.common}/**/*.java, 
                  ${comp.common.dir}/*.java"/>
    </target>
    
    <target name="package"/>
    
    <target name="genclient" depends="compile">
        <java classname="com.sun.ts.tests.jsf.common.util.ClientGenerator" 
              fork="true">
            <classpath>
                <pathelement path="${ts.classpath}"/>
            </classpath>
            <!-- Use the Servlet at the bottom of the hierarch -->
            <arg line="${pkg.dir}/BaseActionSourceTestServlet /"/>
        </java>
        <move file="URLClient.java" tofile="BaseUIComponentClient.java"/>      
    </target>
</project>
