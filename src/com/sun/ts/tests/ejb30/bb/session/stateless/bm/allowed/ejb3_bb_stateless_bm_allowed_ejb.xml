<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" metadata-complete="false" version="3.0" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd">
<enterprise-beans>
<session>
    <ejb-name>AllowedBean</ejb-name>
    <ejb-class>com.sun.ts.tests.ejb30.bb.session.stateless.bm.allowed.AllowedBean</ejb-class>
    <env-entry>
        <env-entry-name>myBoolean</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
      </env-entry>  
      <security-role-ref>
        <role-name>Administrator</role-name>
        <role-link>Administrator</role-link>
      </security-role-ref>
</session>


<session>
    <ejb-name>SessionContextAllowedBean</ejb-name>
    <ejb-class>com.sun.ts.tests.ejb30.bb.session.stateless.bm.allowed.SessionContextAllowedBean</ejb-class>
    <env-entry>
        <env-entry-name>myBoolean</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
      </env-entry>    
    <security-role-ref>
        <role-name>Administrator</role-name>
        <role-link>Administrator</role-link>
      </security-role-ref>
</session>


<session>
    <ejb-name>CallbackAllowedBean</ejb-name>
    <ejb-class>com.sun.ts.tests.ejb30.bb.session.stateless.bm.allowed.CallbackAllowedBean</ejb-class>
    <env-entry>
        <env-entry-name>myBoolean</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
      </env-entry>    
    <security-role-ref>
        <role-name>Administrator</role-name>
        <role-link>Administrator</role-link>
      </security-role-ref>
</session>

<session>
    <ejb-name>InjectionAllowedBean</ejb-name>
    <ejb-class>com.sun.ts.tests.ejb30.bb.session.stateless.bm.allowed.InjectionAllowedBean</ejb-class>
    <env-entry>
        <env-entry-name>myBoolean</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
      </env-entry>  
    <security-role-ref>
        <role-name>Administrator</role-name>
        <role-link>Administrator</role-link>
      </security-role-ref>
</session>

</enterprise-beans>


<assembly-descriptor>
    <security-role>
      <role-name>Administrator</role-name>
    </security-role>
</assembly-descriptor>
</ejb-jar>
