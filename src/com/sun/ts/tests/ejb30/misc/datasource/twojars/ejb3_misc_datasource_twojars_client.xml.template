<application-client xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application-client_6.xsd"
  version="6">

  <data-source>
    <description>override the one in Client.java</description>
    <name>java:global/datasource/twojars/appclient/globalds</name>
    <class-name>@className@</class-name>
    <server-name>@serverName@</server-name>
    <port-number>@portNumber@</port-number>
    <database-name>@databaseName@</database-name>
    <url>jdbc:xxxx://xxxx:1234</url>
    <user>@user@</user>
    <password>@password@</password>
    @jdbc.datasource.props.xml@
    <property>
      <name>x</name>
      <value>y</value>
    </property>
    <property>
      <name>y</name>
      <value>x</value>
    </property>
    <login-timeout>500</login-timeout>
    <transactional>false</transactional>
    <isolation-level>TRANSACTION_READ_UNCOMMITTED</isolation-level>
    <initial-pool-size>2</initial-pool-size>
    <max-pool-size>5</max-pool-size>
    <min-pool-size>1</min-pool-size>
    <max-idle-time>500</max-idle-time>
    <max-statements>100</max-statements>
  </data-source>
  
  <data-source>
    <name>java:app/datasource/twojars/appclient/appds</name>
    <class-name>@className@</class-name>
    <server-name>@serverName@</server-name>
    <port-number>@portNumber@</port-number>
    <database-name>@databaseName@</database-name>
    <user>@user@</user>
    <password>@password@</password>
    @jdbc.datasource.props.xml@
    <transactional>false</transactional>
  </data-source>

</application-client>

