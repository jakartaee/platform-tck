<bindings wsdlLocation="MTOMTestService.wsdl"
        xmlns="http://java.sun.com/xml/ns/jaxws" 
        xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" 
        xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
        xmlns:jaxb="http://java.sun.com/xml/ns/jaxb">

    <bindings node="wsdl:definitions" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/">
        <package name="com.sun.ts.tests.webservices13.servlet.WSMTOMFeaturesTestUsingAnnotations"/>
    </bindings>


    <bindings node="wsdl:definitions/wsdl:types/xs:schema[@targetNamespace='http://mtomservice.org/xsd']"
     xmlns:xs="http://www.w3.org/2001/XMLSchema"
     xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/">
        <jxb:schemaBindings xmlns:jxb="http://java.sun.com/xml/ns/jaxb">
            <jxb:package name="com.sun.ts.tests.webservices13.servlet.WSMTOMFeaturesTestUsingAnnotations"/>
        </jxb:schemaBindings>
    </bindings>

    <bindings>
        <handler-chains xmlns="http://java.sun.com/xml/ns/javaee">
            <handler-chain>
                <port-name-pattern xmlns:ns2="http://mtomservice.org/wsdl">ns2:MTOMTest*</port-name-pattern> 
                <handler>
                    <handler-name>ServerSOAPHandler</handler-name>
                    <handler-class>com.sun.ts.tests.webservices13.servlet.WSMTOMFeaturesTestUsingAnnotations.ServerSOAPHandler</handler-class>
                </handler>
            </handler-chain>
        </handler-chains>
    </bindings>

</bindings>

