<project name="assembly_compat_single_compat13_50" basedir="." default="usage">

    <!-- IMPORTS -->
    <import file="../../../../../../../../../bin/xml/ts.import.xml"/>

    <property name="wrapper.dir" value="com/sun/ts/tests/common/ejb/wrappers"/>  

    <target name="package">

      <!-- Custom packager
        ** Since the cts packager automatically revises all DD's to 1.4, we
        ** must implement a custom packager that preserves DD's from
        ** previus J2EE versions.
        --> 


        <!-- build standalone ejb jar -->
        <ts.ejbjar descriptor="META-INF/ejb-jar.xml"
                   archivename="assembly_compat_single_compat13_50">
                   <fileset dir="${class.dir}" includes="${pkg.dir}/T*.class,
                            ${wrapper.dir}/StatelessWrapper.class"/>
        </ts.ejbjar>


        <!-- build client jar -->
        <ts.clientjar   descriptor="META-INF/application-client.xml"
                        archivename="assembly_compat_single_compat13_50"
                        mainclass="com.sun.ts.tests.assembly.compat.single.compat13_50.Client">
            <fileset dir="${class.dir}"
                 includes="${pkg.dir}/Client.class,
                           ${pkg.dir}/TestBean.class,
                           ${pkg.dir}/TestBeanHome.class,
                           ${wrapper.dir}/StatelessWrapper.class"/>
        </ts.clientjar>


        <!-- build ear -->
        <ts.ear archivename="assembly_compat_single_compat13_50">
            <fileset dir="${dist.dir}/${pkg.dir}"
                     includes="*.jar"/>
        </ts.ear>


        <delete>
          <fileset dir="${dist.dir}/${pkg.dir}" includes="*.jar"/>
        </delete>
        <copy todir="${dist.dir}/${pkg.dir}">
          <fileset dir="${basedir}" 
              includes="*sun-application-client.xml, *sun-ejb-jar.xml"/>
        </copy>   

  </target>

</project>
