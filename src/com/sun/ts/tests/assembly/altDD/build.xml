      <ts.clientjar descriptor="assembly_altDD_client.xml" archivename="assembly_altDD"
                    mainclass="com.sun.ts.tests.assembly.altDD.Client"
                    excludedfiles="com/sun/ts/tests/assembly/altDD/PainterBeanEJB.class"/>
