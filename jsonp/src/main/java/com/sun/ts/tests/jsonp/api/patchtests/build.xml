<project name="jsonp_api_patchtests" basedir="." default="usage"> 
  <import file="../../../../../../../../bin/xml/ts.import.xml"/> 

  <property name="app.name" value="patchtests"/>
  <property name="client.class" value="com.sun.ts.tests.jsonp.api.patchtests.PatchTests"/>
  <property name="other.classes"
            value="com/sun/ts/tests/jsonp/common/*.class,com/sun/ts/tests/jsonp/api/common/*.class"/>

  <target name="package">
      <ts.vehicles name="${app.name}">
        <ejb-elements>
          <fileset dir="${class.dir}" includes="${other.classes}"/>
        </ejb-elements>
        <client-elements>
          <fileset dir="${class.dir}" includes="${other.classes}"/>
        </client-elements>
        <servlet-elements>
          <zipfileset dir="${class.dir}" includes="${other.classes}"
                      prefix="WEB-INF/classes"/>
        </servlet-elements>
        <jsp-elements>
          <zipfileset dir="${class.dir}" includes="${other.classes}"
                      prefix="WEB-INF/classes"/>
        </jsp-elements>
      </ts.vehicles>
  </target>

</project>
