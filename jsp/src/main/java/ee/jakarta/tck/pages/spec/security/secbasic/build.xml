<project name="jsp_sec_secbasic" basedir="." default="usage">
<import file="../../../../../../../../../bin/xml/ts.import.xml"/>
	<property name="app.name" value="jsp_sec_secbasic"/>
	<property name="pkg.name" value="secbasic"/>
	<property name="contentroot.dir" value="${ts.home}/src/web/jsp/sec/${pkg.name}"/>

	<target name="package">
		<ts.war archivename="${app.name}" descriptor="${app.name}_web.xml">
                  <zipfileset dir="${contentroot.dir}" includes="**/*" excludes="**/*.gf"/>
		</ts.war>
		<ts.ear archivename="${app.name}"/>
	</target>

        <target name="compile">
          <ts.javac includes="${pkg.dir}/**/*.java,
                              com/sun/ts/tests/common/webclient/**/*.java"/>
        </target>

</project>
