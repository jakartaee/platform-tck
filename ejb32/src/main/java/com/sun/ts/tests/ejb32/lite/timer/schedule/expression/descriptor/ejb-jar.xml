<ejb-jar xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="4.0"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/ejb-jar_4_0.xsd">
    <!-- timer info is the same as the info used in Client to find timer -->
    <enterprise-beans>
        <session>
            <ejb-name>ScheduleBean</ejb-name>
            <local-bean/>
            <ejb-class>com.sun.ts.tests.ejb32.lite.timer.schedule.expression.descriptor.ScheduleBean</ejb-class>
            <session-type>Singleton</session-type>
            <timer>
                <schedule></schedule>
                <timeout-method>
                    <method-name>auto</method-name>
                </timeout-method>
                <persistent>false</persistent>
                <info>defaultSchedule</info>
            </timer>
            <timer>
                <schedule>
                    <second>2 - 1</second>
                    <minute>* / 5</minute>
                    <hour>2 - 1</hour>
                    <day-of-month>31</day-of-month>
                    <month>2 - 1</month>
                    <day-of-week>0 - 7</day-of-week>
                </schedule>
                <timeout-method>
                    <method-name>auto</method-name>
                </timeout-method>
                <persistent>false</persistent>
                <info>schedule1</info>
            </timer>
            <timer>
                <schedule>
                    <second>1, 8 - 9, 1</second>
                    <minute>2-3, 3-4, 4-5, 4</minute>
                    <hour>1, 3 - 2, 2-3</hour>
                    <day-of-month>-3,-7, -2</day-of-month>
                    <month>maR, jUn, Nov</month>
                    <day-of-week>Fri-Tue, Mon, Mon - Fri</day-of-week>
                </schedule>
                <timeout-method>
                    <method-name>auto</method-name>
                </timeout-method>
                <persistent>false</persistent>
                <info>schedule2</info>
            </timer>
            <timer>
                <schedule>
                    <second>59-0</second>
                    <minute>1, 59-1, 3-5</minute>
                    <hour>1, 3 - 2, 2-3</hour>
                    <day-of-month>3rd Wed, 1st Tue, Last</day-of-month>
                    <month>12-3, 4-6, Sep, Oct-Nov</month>
                    <day-of-week>0, 6-5, 5-4</day-of-week>
                </schedule>
                <timeout-method>
                    <method-name>auto</method-name>
                </timeout-method>
                <persistent>false</persistent>
                <info>schedule3</info>
            </timer>
            <timer>
                <schedule>
                    <second>30 / 19</second>
                    <hour>*/5</hour>
                    <day-of-month>Last, 1, 2nd Mon</day-of-month>
                    <month>9-1, 5-6</month>
                </schedule>
                <timeout-method>
                    <method-name>auto</method-name>
                </timeout-method>
                <persistent>false</persistent>
                <info>schedule4</info>
            </timer>

        </session>
    </enterprise-beans>
</ejb-jar>
