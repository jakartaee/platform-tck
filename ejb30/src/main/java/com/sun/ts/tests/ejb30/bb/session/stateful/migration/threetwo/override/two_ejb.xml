<ejb-jar xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/ejb-jar_4_0.xsd">
    <enterprise-beans>
        <session>
            <display-name>StatefulThreeTestBean</display-name>
            <ejb-name>StatefulThreeTestBean</ejb-name>
            <business-remote>com.sun.ts.tests.ejb30.common.migration.threetwo.ThreeTestIF</business-remote>
            <session-type>Stateful</session-type>
            <transaction-type>Container</transaction-type>

            <ejb-ref>
                <ejb-ref-name>twoRemoteHome</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <home>com.sun.ts.tests.ejb30.common.migration.threetwo.TwoRemoteHome</home>
                <remote>com.sun.ts.tests.ejb30.common.migration.threetwo.TwoRemoteIF</remote>
                <ejb-link>one_ejb.jar#MigrationBean</ejb-link>
                <injection-target>
                    <injection-target-class>com.sun.ts.tests.ejb30.common.migration.threetwo.StatefulThreeTestBean</injection-target-class>
                    <injection-target-name>twoRemoteHome</injection-target-name>
                </injection-target>
            </ejb-ref>

            <ejb-local-ref>
                <ejb-ref-name>twoLocalHome</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <local-home>com.sun.ts.tests.ejb30.common.migration.threetwo.TwoLocalHome</local-home>
                <local>com.sun.ts.tests.ejb30.common.migration.threetwo.TwoLocalIF</local>
                <ejb-link>one_ejb.jar#MigrationBean</ejb-link>
                <injection-target>
                    <injection-target-class>com.sun.ts.tests.ejb30.common.migration.threetwo.StatefulThreeTestBean</injection-target-class>
                    <injection-target-name>twoLocalHome</injection-target-name>
                </injection-target>

            </ejb-local-ref>

            <resource-env-ref>
                <resource-env-ref-name>com.sun.ts.tests.ejb30.common.migration.threetwo.StatefulThreeTestBean/sctx</resource-env-ref-name>
                <resource-env-ref-type>jakarta.ejb.SessionContext</resource-env-ref-type>
                <injection-target>
                    <injection-target-class>com.sun.ts.tests.ejb30.common.migration.threetwo.StatefulThreeTestBean</injection-target-class>
                    <injection-target-name>sctx</injection-target-name>
                </injection-target>
            </resource-env-ref>

            <security-identity>
                <use-caller-identity/>
            </security-identity>
        </session>
    </enterprise-beans>
</ejb-jar>
