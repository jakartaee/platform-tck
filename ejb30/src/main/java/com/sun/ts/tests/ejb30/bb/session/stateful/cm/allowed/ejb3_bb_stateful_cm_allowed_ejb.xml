<ejb-jar xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" metadata-complete="false" version="4.0" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/ejb-jar_4_0.xsd">
    <enterprise-beans>
        <session>
            <ejb-name>SessionContextAllowedBean</ejb-name>
            <env-entry>
                <env-entry-name>myBoolean</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>    
            <security-role-ref>
                <role-name>Administrator</role-name>
                <role-link>Administrator</role-link>
            </security-role-ref>
        </session>

        <session>
            <ejb-name>NoTxAllowedBean</ejb-name>
            <env-entry>
                <env-entry-name>myBoolean</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>    
            <security-role-ref>
                <role-name>Administrator</role-name>
                <role-link>Administrator</role-link>
            </security-role-ref>
        </session>

        <session>
            <ejb-name>AllowedBean</ejb-name>
            <env-entry>
                <env-entry-name>myBoolean</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>    
            <security-role-ref>
                <role-name>Administrator</role-name>
                <role-link>Administrator</role-link>
            </security-role-ref>
        </session>

        <session>
            <ejb-name>TimerEJB</ejb-name>
            <env-entry>
                <env-entry-name>myBoolean</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>  
            <security-role-ref>
                <role-name>Administrator</role-name>
                <role-link>Administrator</role-link>
            </security-role-ref>
        </session>

        <session>
            <ejb-name>SetRollbackOnlyBean</ejb-name>
            <env-entry>
                <env-entry-name>myBoolean</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>    
            <security-role-ref>
                <role-name>Administrator</role-name>
                <role-link>Administrator</role-link>
            </security-role-ref>
        </session>

        <session>
            <ejb-name>CallbackAllowedBean</ejb-name>
            <env-entry>
                <env-entry-name>myBoolean</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>        
            <security-role-ref>
                <role-name>Administrator</role-name>
                <role-link>Administrator</role-link>
            </security-role-ref>
        </session>

        <session>
            <ejb-name>InjectionAllowedBean</ejb-name>
            <env-entry>
                <env-entry-name>myBoolean</env-entry-name>
                <env-entry-type>java.lang.Boolean</env-entry-type>
                <env-entry-value>true</env-entry-value>
            </env-entry>  
            <security-role-ref>
                <role-name>Administrator</role-name>
                <role-link>Administrator</role-link>
            </security-role-ref>
        </session>

    </enterprise-beans>

    <assembly-descriptor>
        <security-role>
            <role-name>Administrator</role-name>
        </security-role>
    </assembly-descriptor>
</ejb-jar>
