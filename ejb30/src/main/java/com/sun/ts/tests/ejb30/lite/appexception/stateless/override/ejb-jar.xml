<ejb-jar xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/ejb-jar_4_0.xsd">
  <assembly-descriptor>
    <application-exception>
       <exception-class>com.sun.ts.tests.ejb30.common.appexception.CheckedAppException</exception-class>
    </application-exception>
    
    <application-exception>
       <exception-class>com.sun.ts.tests.ejb30.common.appexception.UncheckedAppException</exception-class>
    </application-exception>
    
    <application-exception>
       <exception-class>com.sun.ts.tests.ejb30.common.appexception.CheckedRollbackAppException</exception-class>
       <rollback>true</rollback>
    </application-exception>
    
    <application-exception>
       <exception-class>com.sun.ts.tests.ejb30.common.appexception.UncheckedRollbackAppException</exception-class>
       <rollback>true</rollback>
    </application-exception>
    
    <!-- redeclare @ApplicationException -->
    
    <application-exception> <!-- repeat annotation, no override -->
       <exception-class>com.sun.ts.tests.ejb30.common.appexception.AtCheckedAppException</exception-class>
    </application-exception>
    
    <application-exception> <!-- repeat annotation, no override -->
       <exception-class>com.sun.ts.tests.ejb30.common.appexception.AtUncheckedAppException</exception-class>
    </application-exception>
    
    <application-exception> <!-- override rollback to false -->
       <exception-class>com.sun.ts.tests.ejb30.common.appexception.AtCheckedRollbackAppException</exception-class>
       <rollback>false</rollback>
    </application-exception>
    
    <application-exception> <!-- override rollback to false -->
       <exception-class>com.sun.ts.tests.ejb30.common.appexception.AtUncheckedRollbackAppException</exception-class>
       <rollback>false</rollback>
    </application-exception>

  </assembly-descriptor>
</ejb-jar>
