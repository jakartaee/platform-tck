<ejb-jar xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" metadata-complete="false" version="4.0" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/ejb-jar_4_0.xsd">
    <enterprise-beans>
        <session>
            <ejb-name>CallbackBean</ejb-name>
            <post-construct>
                <lifecycle-callback-method>ejbCreate</lifecycle-callback-method>
            </post-construct>
            <pre-destroy>
                <lifecycle-callback-method>ejbRemove</lifecycle-callback-method>
            </pre-destroy>
            <post-activate>
                <lifecycle-callback-method>ejbCreate</lifecycle-callback-method>
            </post-activate>
            <pre-passivate>
                <lifecycle-callback-method>ejbRemove</lifecycle-callback-method>
            </pre-passivate>
        </session>
        <session>
            <ejb-name>SessionBeanCallbackBean</ejb-name>
            <post-construct>
                <lifecycle-callback-method>ejbCreate</lifecycle-callback-method>
            </post-construct>
            <pre-destroy>
                <lifecycle-callback-method>ejbRemove</lifecycle-callback-method>
            </pre-destroy>
            <post-activate>
                <lifecycle-callback-method>ejbActivate</lifecycle-callback-method>
            </post-activate>
            <pre-passivate>
                <lifecycle-callback-method>ejbPassivate</lifecycle-callback-method>
            </pre-passivate>
        </session>
        <session>
            <ejb-name>Callback2Bean</ejb-name>
            <post-construct>
                <lifecycle-callback-method>sharedCallback</lifecycle-callback-method>
            </post-construct>
            <pre-destroy>
                <lifecycle-callback-method>sharedCallback</lifecycle-callback-method>
            </pre-destroy>
            <post-activate>
                <lifecycle-callback-method>sharedCallback</lifecycle-callback-method>
            </post-activate>
            <pre-passivate>
                <lifecycle-callback-method>sharedCallback</lifecycle-callback-method>
            </pre-passivate>
        </session>
    </enterprise-beans>
</ejb-jar>
