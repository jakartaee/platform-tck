<project name="ejb3" default="usage" basedir=".">

  <import file="../../../../../../../../../bin/xml/ts.import.xml"/>

  <target name="compile" >
   <ts.javac includes="${pkg.dir}/**/*.java,
                       com/sun/ts/tests/ejb30/sec/stateful/common/*.java" />
   </target>

  <target name="package" >
   <ts.ejbjar descriptor="ejb3_sec_stateful_lsecr_ejb.xml"
              archivename="ejb3_sec_stateful_lsecr"  >
              <fileset dir="${class.dir}"
                 includes="
         com/sun/ts/tests/ejb30/sec/stateful/common/SecTest.class,
         com/sun/ts/tests/ejb30/sec/stateful/common/SecTestLocal.class,
         com/sun/ts/tests/ejb30/sec/stateful/common/lTest.class,
         com/sun/ts/tests/ejb30/sec/stateful/common/SecTestRoleRef.class,
         com/sun/ts/tests/ejb30/sec/stateful/common/SecTestRoleRefLocal.class,
         com/sun/ts/tests/ejb30/sec/stateful/common/SecTestRoleRefEJB.class,
         com/sun/ts/tests/ejb30/sec/stateful/lsecr/SecTestEJB.class,
         com/sun/ts/tests/ejb30/sec/stateful/lsecr/lTestEJB.class" />

    </ts.ejbjar>

    <ts.clientjar descriptor="ejb3_sec_stateful_lsecr_client.xml"
              archivename="ejb3_sec_stateful_lsecr"
              mainclass="com.sun.ts.tests.ejb30.sec.stateful.lsecr.Client" 
              excludedfiles="com/sun/ts/tests/ejb30/sec/stateful/lsecr/lTestEJB.class,
                             com/sun/ts/tests/ejb30/sec/stateful/lsecr/SecTestEJB.class" >
              <fileset dir="${class.dir}"
                 includes="
        com/sun/ts/lib/harness/EETest.class,
        com/sun/ts/lib/harness/EETest$Fault.class,
        com/sun/ts/lib/harness/EETest$SetupException.class,
        com/sun/ts/tests/ejb30/sec/stateful/common/SecTest.class,
        com/sun/ts/tests/ejb30/sec/stateful/common/SecTestLocal.class,
        com/sun/ts/tests/ejb30/sec/stateful/common/SecTestRoleRefLocal.class,
        com/sun/ts/tests/ejb30/sec/stateful/common/lTest.class"
     />

     </ts.clientjar>

     <ts.ear  descriptor="application.xml"
              archivename="ejb3_sec_stateful_lsecr" />
   </target>

</project>

