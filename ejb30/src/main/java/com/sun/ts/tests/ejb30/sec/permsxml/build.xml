<project name="ejb3" default="usage" basedir=".">

  <import file="../../../../../../../../bin/xml/ts.import.xml"/>

  <target name="compile" >
   <ts.javac includes="${pkg.dir}/**/*.java" />
   </target>


  <target name="package" >
   <ts.ejbjar descriptor="ejb3_sec_permsxml_ejb.xml"
              archivename="ejb3_sec_permsxml"  >
              <fileset dir="${class.dir}"
                 includes="
                    com/sun/ts/tests/ejb30/sec/permsxml/PermDDTestIF.class,
                    com/sun/ts/tests/ejb30/sec/permsxml/PermDDTestEJB.class" />
    </ts.ejbjar>

    <ts.clientjar descriptor="ejb3_sec_permsxml_client.xml"
              archivename="ejb3_sec_permsxml"
              mainclass="com.sun.ts.tests.ejb30.sec.permsxml.Client"
              excludedfiles="com/sun/ts/tests/ejb30/sec/permsxml/PermDDTestEJB.class" >

        <fileset dir="${class.dir}"
                 includes="
        		com/sun/ts/lib/harness/EETest.class,
		        com/sun/ts/lib/harness/EETest$Fault.class,
		        com/sun/ts/lib/harness/EETest$SetupException.class,
		        com/sun/ts/tests/ejb30/sec/permsxml/PermDDTestIF.class" />

     </ts.clientjar>

     <ts.ear  descriptor="application.xml"
              permissionsdescriptor="permissions.xml"
              archivename="ejb3_sec_permsxml" />

   </target>

</project>

