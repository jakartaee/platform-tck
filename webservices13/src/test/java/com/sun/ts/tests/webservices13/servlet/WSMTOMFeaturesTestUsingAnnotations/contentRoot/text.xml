<ProviderConfig>
  <Profile profileId="ebxml">
    <Transport>
      <Protocol>
          http
      </Protocol>

      <Endpoint>
	  <URI>
	     http://www.wombats.com/remote/sender
	  </URI>
	  <URL>
	     http://127.0.0.1:8081/jaxm-provider/receiver/ebxml
	  </URL>
      </Endpoint>

     <ErrorHandling>
        <Retry>
           <MaxRetries>
		5
       	   </MaxRetries>
  	   <RetryInterval>
		2000
	   </RetryInterval>
        </Retry>
    </ErrorHandling>

    <Persistence>
      <Directory>
         ebxml/
      </Directory>
      <RecordsPerFile>
           10
      </RecordsPerFile>
    </Persistence>
    </Transport>

    <Transport>
      <Protocol>
          https
      </Protocol>

      <Endpoint>
	  <URI>
	     jaxm.dummy.uri
	  </URI>
	  <URL>
	     https://127.0.0.1:8443/jaxm/dummy/
	  </URL>
      </Endpoint>

    <Persistence>
      <Directory>
         ebxml-https/
      </Directory>
      <RecordsPerFile>
           10
      </RecordsPerFile>
    </Persistence>
    </Transport>
  </Profile>
</ProviderConfig>
