<project name="jsf_render_ouputstyle" basedir="." default="usage">
    
    <!-- IMPORTS -->
    <import file="../common/render.common.xml"/>
    
    <property name="app.name" value="jsf_render_outputstyle"/>
    
    <target name="package">
        <ts.war archivename="${app.name}" descriptor="${app.name}_web.xml">
            <zipfileset dir="${src.dir}/${pkg.dir}"
                        includes="faces-config.xml"
                        prefix="WEB-INF"/>
            <zipfileset dir="${ts.home}/weblib"
                        includes="*.jar"
                        prefix="WEB-INF/lib"/>
            <zipfileset dir="${render.common.dir}"
                        includes="night.css"
                        prefix="resources"/>
            <zipfileset dir="${render.common.dir}"
                        includes="morning.css"
                        prefix="resources/cssLibrary"/>
            <fileset dir="${jsp.dir}/outputstyle"
                     includes="*.xhtml"/>
        </ts.war>
    </target>
    
</project>
