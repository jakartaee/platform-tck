<project name="assembly_compat_standalone_war" basedir="." default="usage">

    <!-- IMPORTS -->
    <import file="../../../../../../../../../../bin/xml/ts.import.xml"/>

    <target name="package">

        <!-- Custom packager
          ** Since the cts packager automatically revises all DD's to 1.4, we
          ** must implement a custom packager that preserves DD's from
          ** previus J2EE versions.
          --> 
        <mkdir dir="${dist.dir}/${pkg.dir}"/>


        <!-- build standalone war -->
        <ts.war archivename="assembly_compat_standalone_war_compat14_50_component"
                descriptor="WEB-INF/web.xml">
            <zipfileset dir="${basedir}"
                        includes="test.jsp, WEB-INF/web.xml"/>
        </ts.war>


        <!-- build client jar -->
        <ts.clientjar   descriptor="META-INF/application-client.xml"
                        archivename="assembly_compat_standalone_war_compat14_50"
                        mainclass="com.sun.ts.tests.assembly.compat.standalone.war.compat14_50.Client">
            <fileset dir="${class.dir}"
                     includes="${pkg.dir}/Client.class"/>
            <fileset dir="${basedir}"
                     includes="META-INF/application-client.xml"/>
        </ts.clientjar>


        <!-- build ear -->
        <ts.ear archivename="assembly_compat_standalone_war_compat14_50" includedefaultfiles="false">
            <fileset dir="${dist.dir}/${pkg.dir}"
                     includes="assembly_compat_standalone_war_compat14_50_client.jar,
                               ${basedir}/${pkg.dir}/META-INF/MANIFEST.MF"
                     excludes="**.war"
                     />
        </ts.ear>


        <delete>
          <fileset dir="${dist.dir}/${pkg.dir}" includes="assembly_compat_standalone_war_compat14_50_client.jar"/>
        </delete>
        <copy todir="${dist.dir}/${pkg.dir}">
          <fileset dir="${basedir}" 
              includes="*sun-application-client.xml, *sun-web.xml"/>
        </copy>   

  </target>

</project>
